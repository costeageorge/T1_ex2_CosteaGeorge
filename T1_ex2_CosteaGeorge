freq=0.2;
amp=1.5;
t1=0:0.002:10;
t2=0:0.02:10;
t3=0:0.2:10;
tr1=amp*sawtooth(2*pi*freq.*t1,0.5)-0.5;
tr2=amp*sawtooth(2*pi*freq.*t2,0.5)-0.5;
tr3=amp*sawtooth(2*pi*freq.*t3,0.5)-0.5;
amplitude=max(tr1(:))-min(tr1(:));
m=max(tr1);
f=min(tr1==m);
slope=amplitude/f
subplot(3,1,1)
plot(t1,tr1)
subplot(3,1,2)
plot(t2,tr2)
subplot(3,1,3)
plot(t3,tr3)
